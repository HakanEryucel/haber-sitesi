@model PagedList.IPagedList<WebProje.Models.Haber>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    /**/

    ViewBag.Title = "Haberler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
    <h2>Haberler</h2>

    <p>
        @Html.ActionLink("Yeni Haber Ekle", "Create", "Haber", null, new { @class = "btn btn-primary btn-large" })
    </p>
    @using (Html.BeginForm("Index", "Haber", FormMethod.Get))
    {
        <p>
            Başlığa göre bul: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
            <input type="submit" value="Ara" />
        </p>
    }

    <table class="table table-striped table-bordered table-hover">
        <tr>
            <th>
                @Html.ActionLink("Haber Başlığı", "Index", new { sortOrder = ViewBag.BaslikSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Ekleyen Kişi", "Index", new { sortOrder = ViewBag.EkleyenSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Kategori", "Index", new { sortOrder = ViewBag.KategoriSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Haber Tarihi", "Index", new { sortOrder = ViewBag.TarihSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Onay", "Index", new { sortOrder = ViewBag.OnaySortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                @Html.ActionLink("Okunma Sayısı", "Index", new { sortOrder = ViewBag.OkunmaSortParm, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th>
                İşlemler
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Baslik)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Admin.Ad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kategori)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HaberTarihi)
                </td>
                <td>
                    @{
                        if (item.Onay == null)
                        {
                            @("Belirtilmemiş");
                        }
                        else if (item.Onay == true)
                        {
                            @("Onaylanmış");
                        }
                        else
                        {
                            @("Onaylanmamış")
                        }
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OkunmaSayisi)
                </td>
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.HaberID }) |
                    @Html.ActionLink("Detaylar", "Details", new { id = item.HaberID }) |
                    @Html.ActionLink("Sil", "Delete", new { id = item.HaberID })
                </td>
            </tr>
        }
    </table>
    <br />
    @Model.PageCount Sayfadan @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber). gösteriliyor.

    @Html.PagedListPager(Model, page => Url.Action("Index",
        new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
</div>