@model IEnumerable<WebProje.Models.Haber>

@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Haberler</h2>

<p>
    @Html.ActionLink("Yeni Haber Ekle", "Create", "Haber", null, new { @class = "btn btn-primary btn-large" })
</p>
<div>
    <table class="table table-striped table-bordered table-hover">
        <tr>
            <th>
                Haber Başlığı
            </th>
            <th>
                Ekleyen Kişi
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kategori)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HaberTarihi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Onay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OkunmaSayisi)
            </th>
            <th>
                İşlemler
            </th>
        </tr>

        @foreach (var item in Model)
         {
         <tr>
         <td>
             @Html.DisplayFor(modelItem => item.Baslik)
         </td>
         <td>
             @Html.DisplayFor(modelItem => item.Admin.Ad)
         </td>
         <td>
             @Html.DisplayFor(modelItem => item.Kategori)
         </td>
         <td>
             @Html.DisplayFor(modelItem => item.HaberTarihi)
         </td>
         <td>
             @{
                 if (item.Onay == null)
                 {
                     @("Belirtilmemiş");
                 }
                 else if (item.Onay == true)
                 {
                     @("Onaylanmış");
                 }
                 else
                 {
                     @("Onaylanmamış")
                 }
               }
         </td>
         <td>
              @Html.DisplayFor(modelItem => item.OkunmaSayisi)
         </td>
         <td>
              @Html.ActionLink("Düzenle", "Edit", new { id = item.HaberID }) |
              @Html.ActionLink("Detaylar", "Details", new { id = item.HaberID }) |
              @Html.ActionLink("Sil", "Delete", new { id = item.HaberID })
         </td>
         </tr>
         }
    </table>
</div>
